{
  "name": "@watchmen/containr",
  "version": "1.0.5",
  "description": "run cli in containers",
  "type": "module",
  "exports": {
    ".": "./src/index.js",
    "./oci": "./src/oci.js",
    "./util": "./src/util.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/the-watchmen/node-containr.git"
  },
  "scripts": {
    "pretest": "xo",
    "test": "npm run ava && npm run jest",
    "testx": "npm run ouch",
    "jest": "DEBUG=dbg:* NODE_OPTIONS='--experimental-vm-modules' npx jest --testPathPattern test/jest",
    "_jest": "DEBUG=dbg:* NODE_OPTIONS='--experimental-vm-modules' npx jest",
    "ava": "DEBUG=dbg:* NODE_ENV=test npx ava **/ava",
    "_ava": "DEBUG=dbg:* NODE_ENV=test npx ava",
    "ouch": "npm run _ava -- '**/ava/oci.test.js'"
  },
  "author": "tony kerz",
  "license": "ISC",
  "dependencies": {
    "@watchmen/debug": "^2.0.8",
    "@watchmen/helpr": "^3.0.0",
    "config": "^3.3.12",
    "execa": "^9.5.2",
    "fs-extra": "^11.2.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "ava": "^6.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "xo": "^0.60.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
